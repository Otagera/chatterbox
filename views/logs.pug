doctype html
html(lang='en')
  head
    title Log Recommandations
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css')
    script(src='https://unpkg.com/htmx.org@1.5.0')
    style.
      body {padding: 20px}
      table {font-family: arial, sans-serif;border-collapse: collapse;width: 100%;}
      tr.htmx-swapping td {opacity: 0;transition: opacity 0.5s ease-out;}
      td, th {border: 1px solid #383737;text-align: left;padding: 8px;}
      tr:nth-child(even) {background-color: #dddddd;}
  body
    h1 Log Recommendations
    form(hx-post="/submit" hx-swap="beforeend" hx-target="#new-log" class="mb-3")
      input(type="text" placeholder="Type" name="type" class="form-control mb-3")
      input(type="text" placeholder="Key" name="key" class="form-control mb-3")
      button(type="submit" class="btn btn-primary") Submit
    table
      thead
        tr
          th ID
          th Key
          th Data
          th Type
      tbody(id="new-log" hx-target="closest tr" hx-swap="outerHTML swap:0.5s")
        each log in logs
          tr
            td #{log.id}
            td #{log.key}
            
            td(hx-get=`/logs/get-log-data/${log.id}` role="button")
              small(class="text-muted") #{log.createdAt}
            td #{log.type}
