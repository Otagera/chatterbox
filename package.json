{
	"name": "logging",
	"version": "2.0.0",
	"description": "A simple typescript server to parse log",
	"scripts": {
		"start": "node dist/index.js",
		"build": "npm run tailwind:css && tsc",
		"start:dev": "npm run tailwind:css && tsc-watch --onSuccess \"node dist/index.js\"",
		"start:prod": "tsc && node dist/index.js",
		"tailwind:css": "postcss views/styles/tailwind.css -o views/styles/style.css"
	},
	"keywords": [],
	"author": "Othniel Agera",
	"license": "ISC",
	"dependencies": {
		"@mikro-orm/core": "^6.2.9",
		"@mikro-orm/mongo-highlighter": "^1.0.0",
		"@mikro-orm/mongodb": "^6.2.9",
		"connect-mongo": "^5.1.0",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-promise-router": "^4.1.1",
		"express-session": "^1.18.1",
		"lodash": "^4.17.21",
		"pug": "^3.0.3",
		"tailwindcss": "^4.1.7",
		"tsc-watch": "^6.2.0",
		"typescript": "^5.5.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^6.2.9",
		"@tailwindcss/postcss": "^4.1.7",
		"@types/express": "^4.17.21",
		"@types/express-promise-router": "^3.0.0",
		"@types/express-session": "^1.18.1",
		"@types/jest": "^29.5.12",
		"@types/lodash": "^4.17.14",
		"@types/node": "^20.14.7",
		"@types/supertest": "^6.0.2",
		"autoprefixer": "^10.4.21",
		"jest": "^29.7.0",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.5",
		"ts-node": "^10.9.2"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./app/mikro-orm.config.ts",
			"./dist/app/mikro-orm.config.js"
		]
	}
}
